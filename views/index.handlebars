<main class="container">
    <div class="row">
        <div class="col-sm-12 justify-content-center">
            <p class="text-center"><img src="https://cdn.dribbble.com/users/184987/screenshots/5712804/minnaso_burger.png" id="imgElement"></p>
        </div>
    </div>
    {{!-- Section for listing the burgers users did not eat yet --}}
    <section class="row">
        <div class="col-md-6">
            <h2 class=>Burgers not eaten</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li><span> {{this.id}}. {{this.burger_name}}</span>
                    <button type="button" class="btn btn-primary" id="devourButton" data-id={{this.id}}>DEVOUR
                        IT</button></li>
                {{/unless}}
                {{/each}}
            </ul>
        </section>
        {{!-- Section for listing the burgers user devoured --}}
        <section class="col-md-6">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li><span> {{this.id}}. {{this.burger_name}}</span></li>
                {{/if}}
                {{/each}}
            </ul>
        </section>
    </div>
    {{!-- Section where user can add new burger  --}}
    <form class="create-form">
        <div class="form-group">
            <input type="text" id="newBurger" name="burger">
            <button type="submit" class="btn btn-primary" id="addBurger">Add Burger</button>
        </div>
    </form>
</main>

